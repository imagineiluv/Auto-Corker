@page "/github-issues"
@using System.Linq
@using Corker.Orchestrator.Models
@inject Corker.Orchestrator.Services.WorkspaceDashboardService DashboardService

<section class="page-header">
    <div>
        <span class="page-kicker">Tools</span>
        <h1>GitHub Issues</h1>
        <p class="page-subtitle">Track issues imported from connected repositories.</p>
    </div>
    <div class="page-actions">
        <button class="ghost-button" type="button">Settings</button>
        <button class="primary-button" type="button" @onclick="SyncIssuesAsync">Sync</button>
    </div>
</section>

<section class="issue-toolbar">
    <div class="search-box">
        <input class="text-input" placeholder="Search issues" @bind="_searchQuery" />
        <span class="pill muted">@FilteredIssues.Count() issue(s)</span>
    </div>
    <div class="filter-group">
        <button class="tab-pill @(IsFilter("Open"))" type="button" @onclick="@(() => SetFilter("Open"))">Open</button>
        <button class="tab-pill @(IsFilter("Assigned"))" type="button"
            @onclick="@(() => SetFilter("Assigned"))">Assigned</button>
        <button class="tab-pill @(IsFilter("Closed"))" type="button"
            @onclick="@(() => SetFilter("Closed"))">Closed</button>
    </div>
</section>

<section class="split-layout">
    <div class="panel list-panel">
        <div class="panel-header">
            <div>
                <h3>Issues</h3>
                <p>@_repositoryName</p>
            </div>
            <span class="pill green">Connected</span>
        </div>
        <div class="panel-body">
            <div class="stacked-list compact">
                @foreach (var issue in FilteredIssues)
                {
                    <div class="stacked-item issue-item @(IsSelected(issue))" @onclick="() => SelectIssue(issue)">
                        <div>
                            <h3>#{issue.Number} - @issue.Title</h3>
                            <p>@issue.Summary</p>
                        </div>
                        <span class="pill @issue.StatusClass">@issue.Status</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="panel detail-panel">
        <div class="panel-header">
            <div>
                <h3>Issue Detail</h3>
                <p>Review description, labels, and next steps.</p>
            </div>
            <button class="ghost-button" type="button">Investigate</button>
        </div>
        <div class="panel-body">
            @if (_selectedIssue is null)
            {
                <div class="empty-state">
                    <div class="empty-icon">🗂️</div>
                    <p>Select an issue to view details</p>
                    <span>Choose from the list on the left</span>
                </div>
            }
            else
            {
                <div class="issue-detail">
                    <h3>#{_selectedIssue.Number} - @_selectedIssue.Title</h3>
                    <p>@_selectedIssue.Description</p>
                    <div class="tag-row">
                        @foreach (var label in _selectedIssue.Labels)
                        {
                            <span class="pill">@label</span>
                        }
                    </div>
                    <div class="detail-grid">
                        <div>
                            <span class="stat-label">Assignee</span>
                            <strong>@_selectedIssue.Assignee</strong>
                        </div>
                        <div>
                            <span class="stat-label">Priority</span>
                            <strong>@_selectedIssue.Priority</strong>
                        </div>
                        <div>
                            <span class="stat-label">Linked task</span>
                            <strong>@_selectedIssue.LinkedTask</strong>
                        </div>
                    </div>
                    <div class="panel-actions">
                        <button class="ghost-button" type="button">Create Task</button>
                        <button class="primary-button" type="button">Auto-fix</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@code {
    private readonly string _repositoryName = "phillonc/auto-claude";
    private List<IssueItem> _issues = new();
    private IssueItem? _selectedIssue;
    private string _searchQuery = string.Empty;
    private string _activeFilter = "Open";

    private IEnumerable<IssueItem> FilteredIssues
    {
        get
        {
            IEnumerable<IssueItem> filtered = _issues;
            if (!string.IsNullOrWhiteSpace(_searchQuery))
            {
                filtered = filtered.Where(issue => issue.Title.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase));
            }

            if (_activeFilter == "Open")
            {
                filtered = filtered.Where(issue => issue.Status != "Closed");
            }
            else if (_activeFilter == "Closed")
            {
                filtered = filtered.Where(issue => issue.Status == "Closed");
            }

            return filtered;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        _issues = (await DashboardService.GetIssuesAsync()).ToList();
    }

    private async Task SyncIssuesAsync()
    {
        _issues = (await DashboardService.SyncIssuesAsync()).ToList();
    }

    private void SelectIssue(IssueItem issue)
    {
        _selectedIssue = issue;
    }

    private string IsSelected(IssueItem issue)
    {
        return _selectedIssue == issue ? "active" : string.Empty;
    }

    private void SetFilter(string filter)
    {
        _activeFilter = filter;
    }

    private string IsFilter(string filter)
    {
        return _activeFilter == filter ? "active" : string.Empty;
    }
}