@page "/terminals"
@using Corker.Core.Interfaces
@inject IAgentService AgentService

<h3>Agent Terminals</h3>

<div class="terminal-container">
    <div class="tabs">
        @foreach (var agent in Agents)
        {
            <button class="tab-button @(SelectedAgentId == agent.Id ? "active" : "")" @onclick="() => SelectAgent(agent.Id)">
                @agent.Name (@agent.Role)
                <span class="status-indicator @GetStatusClass(agent.Status)"></span>
            </button>
        }
    </div>

    <div class="terminal-view">
        @if (SelectedAgentId != Guid.Empty)
        {
            <div class="terminal-output">
                @foreach (var log in Logs)
                {
                    <div class="log-line">@log</div>
                }
            </div>
        }
        else
        {
            <p>Select an agent to view logs.</p>
        }
    </div>
</div>

@code {
    private List<Corker.Core.Entities.Agent> Agents = new();
    private Guid SelectedAgentId = Guid.Empty;
    private List<string> Logs = new();

    protected override async Task OnInitializedAsync()
    {
        Agents = (await AgentService.GetAgentsAsync()).ToList();
        if (Agents.Any())
        {
            SelectedAgentId = Agents.First().Id;
        }

        // Poll for logs or hook up event (simplified for now)
        AgentService.OnLogReceived += (sender, log) =>
        {
            Logs.Add(log);
            InvokeAsync(StateHasChanged);
        };

        // Initial fetch
        var initialLogs = await AgentService.GetLogsAsync();
        Logs = initialLogs.ToList();
    }

    private void SelectAgent(Guid agentId)
    {
        SelectedAgentId = agentId;
        // In a real scenario, filter logs by agent ID
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Idle" => "status-idle",
            "Busy" => "status-busy",
            "Error" => "status-error",
            _ => "status-unknown"
        };
    }
}

<style>
    .terminal-container {
        display: flex;
        flex-direction: column;
        height: 80vh;
        border: 1px solid #ccc;
        background-color: #1e1e1e;
        color: #d4d4d4;
    }
    .tabs {
        display: flex;
        background-color: #252526;
        padding: 0.5rem;
    }
    .tab-button {
        background-color: #2d2d2d;
        color: #cccccc;
        border: none;
        padding: 0.5rem 1rem;
        margin-right: 2px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .tab-button.active {
        background-color: #1e1e1e;
        border-top: 2px solid #007acc;
    }
    .status-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }
    .status-idle { background-color: green; }
    .status-busy { background-color: orange; }
    .status-error { background-color: red; }

    .terminal-view {
        flex: 1;
        padding: 1rem;
        font-family: 'Consolas', 'Courier New', monospace;
        overflow-y: auto;
    }
    .log-line {
        white-space: pre-wrap;
    }
</style>
