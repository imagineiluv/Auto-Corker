@page "/worktrees"
@using Corker.Orchestrator.Models
@inject Corker.Orchestrator.Services.WorkspaceDashboardService DashboardService

<section class="page-header">
    <div>
        <span class="page-kicker">Tools</span>
        <h1>Worktrees</h1>
        <p class="page-subtitle">Manage isolated branches created by the agents.</p>
    </div>
    <div class="page-actions">
        <button class="ghost-button" type="button" @onclick="ReloadAsync">Cleanup</button>
        <button class="primary-button" type="button">+ New Worktree</button>
    </div>
</section>

<section class="page-content">
    <div class="stacked-list">
        @foreach (var worktree in _worktrees)
        {
            <div class="stacked-item">
                <div>
                    <h3>@worktree.Name</h3>
                    <p>@worktree.Summary</p>
                    <div class="tag-row">
                        <span class="pill muted">@worktree.UpdatedLabel</span>
                        <span class="pill">@worktree.TasksLabel</span>
                    </div>
                </div>
                <span class="pill @worktree.StatusClass">@worktree.Status</span>
            </div>
        }
    </div>
</section>

@code {
    private IReadOnlyList<WorktreeItem> _worktrees = Array.Empty<WorktreeItem>();

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        _worktrees = await DashboardService.GetWorktreesAsync();
    }
}
